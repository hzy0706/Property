<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.property.dao.TBuildingDao">
  <resultMap id="BaseResultMap" type="com.trkj.property.entity.TBuilding">
    <id column="building_id" jdbcType="INTEGER" property="buildingId" />
    <result column="residence_id" jdbcType="INTEGER" property="residenceId" />
    <result column="building_name" jdbcType="VARCHAR" property="buildingName" />
    <result column="covered_area" jdbcType="DECIMAL" property="coveredArea" />
    <result column="use_area" jdbcType="DECIMAL" property="useArea" />
    <result column="build_function" jdbcType="VARCHAR" property="buildFunction" />
    <result column="structure_type" jdbcType="VARCHAR" property="structureType" />
  </resultMap>
  <sql id="Base_Column_List">
    building_id, residence_id, building_name, covered_area, use_area, build_function, 
    structure_type
  </sql>
  <select id="selectByTBuildingKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_building
    where building_id = #{buildingId,jdbcType=INTEGER}
  </select>

  <select id="selectAllTBuildingByRid" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_building
    where residence_id = #{residenceId,jdbcType=INTEGER}
  </select>
</mapper>